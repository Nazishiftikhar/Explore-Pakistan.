
@using Tour_Plan_Agency.Models
@using Tour_Plan_Agency.Utills
@{
    Layout = "~/views/shared/_Layoutcustomers.cshtml";

    List<tblRoom> list = new List<tblRoom>();
    if (Session["Cart"] != null)
    {
        list = (List<tblRoom>)Session["Cart"];
    }

    int indexno = -1;
    Decimal total = 0;
}

@{
    ViewBag.Title = "DisplayCart";
}

<h2>DisplayCart</h2>



<main class="main">
    <div class="wrap">
        <!--breadcrumbs-->
        <nav class="breadcrumbs">
            <!--crumbs-->
            <ul>
                <li><a href="#" title="Home">Home</a></li>
                <li>Contact</li>
            </ul>
            <!--//crumbs-->
        </nav>
        <!--//breadcrumbs-->
        <!-- Start Cart  -->
        <div class="cart-box-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-main table-responsive">
                            <table class="table">
                                <thead>
                                        <tr style="background-color:#76bdc5">
                                        <th><b>Images</b></th>
                                        <th><b>Hotel Rooms</b></th>
                                        <th><b>Price</b></th>
                                        <th><b>Quantity</b></th>
                                        <th><b>Total </b></th>
                                        <th><b>Remove</b></th>
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in list)
                                    {
                                        indexno ++;
                                        total += item.Room_Price;

                                        <tr>
                                            <td class="thumbnail-img">
                                                <a href="#">
                                                    <img class="img-fluid" src="@Url.Content(item.Room_image)" alt="" />
                                                </a>
                                            </td>
                                            <td class="name-pr">
                                                <a href="#">
                                                    @item.Room_Name
                                                </a>
                                            </td>
                                            <td class="price-pr">
                                                <p>Rs:@item.Room_Price</p>
                                            </td>
                                            <td class="quantity-box">
                                                <a href="@Url.Action("MinusToCart", "Cart",new {id=indexno})" class="btn btn-danger fa fa-minus"></a>
                                                <span style="margin:5px" ; font-size:20px;font-weight:bold">
                                                    @item.quantity
                                                </span>
                                                <a href="@Url.Action("PlusToCart", "Cart",new {id=indexno})" class="btn btn-success fa fa-plus"></a>
                                            </td>
                                            <td class="total-pr">
                                                <p>Rs:@(item.Room_Price*item.quantity)</p>
                                            </td>
                                            <td class="remove-pr">
                                                <a href="@Url.Action("RemoveFromCart", "Cart",new {id=indexno})">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                                                                        
                                            </tr>
                                    }
                                  </tbody>
                        </table>

                        <div class=" col-lg-2">
                              <button onclick="window.location.href = '@Url.Action("Checkout","Home")'">Checkout</button>
                           </div>
                            
                                <div class="col-lg-pull-8 ">
                                    <div class="update-box">
                                        <input onclick="window.location.href = '@Url.Action("Rooms","Home")'" value="Update Cart" type="submit">
                                    </div>
                                </div>
                           
                           </div>

                        </div>
                    </div>
                    </div>
                </div>





            </div>
        
        <!-- End Cart -->
        <!-- Start Instagram Feed  -->
        <!-- End Instagram Feed  -->
    
</main>